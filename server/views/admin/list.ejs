<% include ../shared/header.ejs %>

<h2>Admin Users List</h2>
<p><a href="/admins/add">Add a New Admin</a></p>
<% if (users.length) { %>
    <table class="tabletest2">
        <% for (var i = 0; i < users.length; i++) { %>
        <tr>
            <td><%= users[i].firstName %> <%= users[i].lastName %> (<%= users[i].username %>)
                <i class="fa fa-calendar" aria-hidden="true"></i>
                <%= moment(users[i].createdAt).format('MM/DD/YYYY, h:mm:ss a') %>
            </td>
        </tr>
        <% } %>
    </table>
<% } else { %>
<p>No admins found ;-(</p>
<% } %>

